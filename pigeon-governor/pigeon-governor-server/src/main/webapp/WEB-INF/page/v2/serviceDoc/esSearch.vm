<script type="text/javascript">
    window.onload = function() {
        $('#doc-nav').addClass("open");
    };
    jQuery(function($) {
        $('#search').click(function () {
//            $.ajax(                type:"post",
//                url:"/doc/testForAjax",
//                xhr:function () {
//                    var xhr = new XMLHttpRequest();
//                    console.log(xhr);
//                    return xhr;
//                },
//                beforeSend: function (xhr){
//                    console.log(
//                     $.ajaxSettings.xhr()
//                    );
//                    xhr.setRequestHeader('Authorization', "Basic") ;
////                    console.log(xhr.requestHeaders);
//                    console.log(xhr);
//                },
//            });
            var searchKey = $('#searchInput').val();
            console.time("First search return");
            $.ajax({
                type : "post",
                url :"/doc/search",
                data:{'searchKey':searchKey},
                dataType : "json",
                success : function (data) {
                    console.timeEnd("First search return");
                    console.time("Prasing the result page");
                    $('#testPagination').html("");
                    $('#searchAns').html("");
                    if(data.count=="0"){
                        $('#resultSummary').html("<span class='red'>未能匹配相关文档</span>("+data.timeConsume+" ms)");
                    }else{
                        $('#resultSummary').html("Page 1 of "+data.count +" results("+data.timeConsume+" ms)");
                        var searchHit = data.searchResults;
                        $.each(searchHit,function(i,item){
                            var hitId = i;
                            var serviceId = item.serviceId;
                            var serviceName = item.serviceName;
                            $('#searchAns').append("<div id = 'hit-"+hitId+"'></div>");
                            $('#'+'hit-'+hitId).append("<h4><a href='/doc/"+serviceId+"' target='_blank'>"+serviceName+"</a></h4>");
                            var hightLight = item.fragmentsFormat;
                            $('#'+'hit-'+hitId).append("<p class='value-size'>"+hightLight+"</p>");
                        });
                        console.timeEnd("Prasing the result page");
                        console.time("Parsing the pagination");
                        $('#testPagination').accordion({
                            "fold":true,
                            "size":Math.ceil(data.count/10),
                            "viewNumber":7,
                            "callback":function(page){
                                console.time("Pagination search");
                                var index = parseInt(page);
                                $.ajax({
                                    type:"post",
                                    url:"/doc/paginationSearch",
                                    data:{'searchKey':$('#searchInput').val(),'start':(index-1)*10-1,'size':10},
                                    dataType : "json",
                                    success:function(ans){
                                        console.timeEnd("Pagination search");
                                        console.time("Pagination search prasing");
                                        $('#searchAns').html("");
                                        $('#resultSummary').html("Page "+index+" of "+data.count +" results("+ans.timeConsume+" ms)");
                                        var searchAns = ans.searchResults;
                                        $.each(searchAns,function(i,item){
                                            var hitId = i;
                                            var serviceId = item.serviceId;
                                            var serviceName = item.serviceName;
                                            $('#searchAns').append("<div id = 'hit-"+hitId+"'></div>");
                                            $('#'+'hit-'+hitId).append("<h4><a href='/doc/"+serviceId+"' target='_blank'>"+serviceName+"</a></h4>");
                                            var hightLight = item.fragmentsFormat;
                                            $('#'+'hit-'+hitId).append("<p class='value-size'>"+hightLight+"</p>");
                                        });
                                        console.timeEnd("Pagination search prasing");
                                    }
                                });
                            }
                        });
                        console.time("Parsing the pagination");
                    }

                }
            });
        });
    });
</script>
