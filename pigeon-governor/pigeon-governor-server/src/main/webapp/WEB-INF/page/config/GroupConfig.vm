<script type="text/javascript">

    jQuery(function($) {
        $(document).ready(function () {
            $('table').dataTable({
                bAutoWidth: false,
                aoColumns: [
                    { "bSortable": false },
                    null,
                    null,
                    null
                ],
                "aaSorting": [],
                dom:"<'myRow'<'col-xs-8'><'col-xs-4'B>>"+
                "<'row aceTableRow'<'col-xs-3'l><'col-xs-9'fr>>"+
                "t"+
                "<'row'<'col-xs-3'i><'col-xs-9'p>>",
                buttons: [
                    {
                        text:' <i class="ace-icon fa fa-trash-o bigger-120 danger"></i>',
                        action:function ( e, dt, node, config ) {
                            var tableBody = $(dt.table().body());
                            var tableId = tableBody.parent().attr('id');
                            var serviceId = tableId.substr(8);
                            var tableType = tableId.substr(6,1);
                            var serviceNameId = '#serviceName-'+serviceId;
                            $('#batchTitle').html($(serviceNameId).html());
                            $('#batchOperation').attr("tableId",tableId);
                            var trs = new Array();
                            $('#'+tableId).find('tr > td:first-child input:checkbox').each(function () {
                                var hasChk = $(this).is(':checked');
                                if(hasChk){
                                    var childs = $(this).parent().parent().parent().children();
                                    var ipAddress = $(childs.get(1)).html();
                                    var group =  $(childs.get(2)).html();
                                    trs.push(ipAddress+":"+group);
