                            });
                            if(trs.length==0){
                                bootbox.dialog({
                                    message: "<span class='bigger-110'>暂时未选中任何配置项</span>",
                                    buttons:
                                    {
                                        "success" :
                                        {
                                            "label" : "<i class='ace-icon fa fa-check'></i>Confirm",
                                            "className" : "btn-sm btn-success",
                                            "callback": function() {
                                                //Example.show("great success");
                                            }
                                        }

                                    }
                                });
                            }else{
                                $('#influenceCount').html(trs.length);
                                $('#selects').html("");
                                $.each(trs,function(n,item){
                                    $('#selects').append('<p>'+item+'</p>');
                                });
                                $('#batchOperation').modal();
                            }
                        }
                    },
                    {
                        text:'<i class="ace-icon fa fa-pencil-square-o bigger-120 primary"></i>',
                        action:function(e,dt,node,config){
                            var tableBody = $(dt.table().body());
                            var tableId = tableBody.parent().attr('id');
                            var serviceId = tableId.substr(8);
                            var tableType = tableId.substr(6,1);
                            var serviceNameId = '#serviceName-'+serviceId;
                            $('#new-form-1').html("");
                            $('#new-form-2').html("");
                            $('#new-form-1').append('<input type="text" placeholder="" id="create-form-1" class="col-xs-10 col-sm-5" />');
                            $('#new-form-2').append('<input type="text" placeholder="" id="create-form-2" class="col-xs-10 col-sm-5" />');
                            $('#CreateModalTitle').html($(serviceNameId).html());
                            $('#routerCreate').attr("tableId",tableId);
                            $('#routerCreate').modal();
                        }
                    },
                    {
                        text:'<i class="ace-icon fa fa-refresh bigger-120 success"></i>',
                        action:function (e,dt,node,config) {
                            var tableBody = $(dt.table().body());
                            var tableId = tableBody.parent().attr('id');
                            var serviceId = tableId.substr(8);
                            var tableType = tableId.substr(6, 1);
                            var projectName = $('#projectName').html();
                            var serviceNameId = '#serviceName-' + serviceId;
                            var serviceName = $(serviceNameId).html();
                            $.ajax({
                                type: "post",
                                url: "/shs/reload",
                                data: {'projectName': projectName, 'serviceName': serviceName, 'tableType': tableType},
                                dataType: "json",
                                success: function (data) {
                                    dt.table().clear();
                                    var size = 0;
                                    $.each(data,function(i,item){
                                        size = i+1;
                                        var ipAddress = item.ipAddress;
                                        var group = item.group;
                                        var newRowId = tableId + '-' + (Number(i) + 1);
                                        var newRowString = '<tr id="' + newRowId + '"><td class="center"><label class="position-relative"><input type="checkbox" class="ace" /><span class="lbl"></span>'
                                                + '</label></td>' + '<td>' + ipAddress + '</td>' + '<td>' + group + '</td>' + '<td><div class="hidden-sm hidden-xs action-buttons"><a  class="primary routerConfigCancel">'
                                                + '<i class="ace-icon fa fa-pencil bigger-130"></i></a> <a class="red routerDelete"> <i class="ace-icon fa fa-times  bigger-130"></i>' + '</a></div></td></tr>';
                                        var newRow = $(newRowString);
                                        newRow.find('.routerConfigCancel').bind("click", function (event) {
                                            var tableId = $(this).parent().parent().parent().parent().parent().attr('id');
                                            var routerId = $(this).parent().parent().parent().attr('id');
                                            var serviceId = tableId.substr(8);
                                            var tableType = tableId.substr(6, 1);
                                            var serviceNameId = '#serviceName-' + serviceId;
                                            $('#modalTitle').html($(serviceNameId).html());
                                            var group = $(this).parent().parent().prev();
                                            var ipAddress = group.prev();
                                            $('#edit-form-1').html("");
                                            $('#edit-form-2').html("");
                                            $('#edit-form-1').append('<input type="text" id="form-field-1" class="col-xs-10 col-sm-5" value="'+ipAddress.html()+'" />');
                                            $('#edit-form-2').append('<input type="text" id="form-field-2" class="col-xs-10 col-sm-5" value="'+group.html()+'" />');
                                            $('#routerEdit').attr("tableType", tableType);
                                            $('#routerEdit').attr("orignalIpAddress", ipAddress.html());
                                            $('#routerEdit').attr("orignalGroup", group.html());
                                            $('#routerEdit').attr("routerId", routerId);
                                            $("#routerEdit").modal();
                                            event.stopPropagation();    //  阻止事件冒泡
                                        });
                                        newRow.find('.routerDelete').bind("click", function (event) {
                                            var tableId = $(this).parent().parent().parent().parent().parent().attr('id');
                                            var routerId = $(this).parent().parent().parent().attr('id');
                                            var serviceId = tableId.substr(8);
                                            var tableType = tableId.substr(6, 1);
                                            var serviceNameId = '#serviceName-' + serviceId;
                                            $('#routerDeleteTitle').html($(serviceNameId).html());
                                            var group = $(this).parent().parent().prev();
                                            var ipAddress = group.prev();
                                            $('#delete-form-1').attr("value",ipAddress.html());
                                            $('#delete-form-2').attr("value",group.html());
                                            $('#routerDelete').attr("tableType", tableType);
                                            $('#routerDelete').attr("orignalIpAddress", ipAddress.html());
                                            $('#routerDelete').attr("orignalGroup", group.html());
                                            $('#routerDelete').attr("routerId", routerId);
                                            $('#routerDelete').modal();
                                        });
                                        dt.row.add(newRow);
                                    });
                                    $('#'+tableId).attr('nowIndex',size);
                                    dt.draw();
                                }
                            });
                        }
                    }
                ]
            });
        });
        $('#createConfirm').bind("click",function(event) {
            var tableId = $('#routerCreate').attr("tableId");
            var ajaxTableType = tableId.substr(6, 1);
            var dt = $('#' + tableId).DataTable();
            var tableBody = $(dt.table().body());
            var tableIndex = tableBody.parent().attr('nowIndex');
            var newRowId = tableId + '-' + (Number(tableIndex) + 1);
            tableBody.parent().attr('nowIndex', Number(tableIndex) + 1);

            var newRowString = '<tr id="' + newRowId + '"><td class="center"><label class="position-relative"><input type="checkbox" class="ace" /><span class="lbl"></span>'
                    + '</label></td>' + '<td>' + $('#create-form-1').val() + '</td>' + '<td>' + $('#create-form-2').val() + '</td>' + '<td><div class="hidden-sm hidden-xs action-buttons"><a  class="primary routerConfigCancel">'
                    + '<i class="ace-icon fa fa-pencil bigger-130"></i></a> <a class="red routerDelete"> <i class="ace-icon fa fa-times bigger-130"></i>' + '</a></div></td></tr>'
            var projectName = $('#projectName').html();
            var serviceName = $('#CreateModalTitle').html();
            $.ajax({
                type: "post",
                url: "/shs/createRouterConfig",
                data: {'projectName': projectName, 'serviceName': serviceName, 'tableType': ajaxTableType,"ipAddress":$('#create-form-1').val(),"group":$('#create-form-2').val()},
                dataType: "json",
                success: function (data) {
                    if(JSON.stringify(data)=="true"){
                        var newRow = $(newRowString);
                        newRow.find('.routerConfigCancel').bind("click", function (event) {
                            var tableId = $(this).parent().parent().parent().parent().parent().attr('id');
                            var routerId = $(this).parent().parent().parent().attr('id');
                            var serviceId = tableId.substr(8);
                            var tableType = tableId.substr(6, 1);
                            var serviceNameId = '#serviceName-' + serviceId;
                            $('#modalTitle').html($(serviceNameId).html());
                            var group = $(this).parent().parent().prev();
                            var ipAddress = group.prev();
                            $('#edit-form-1').html("");
                            $('#edit-form-2').html("");
                            $('#edit-form-1').append('<input type="text" id="form-field-1" class="col-xs-10 col-sm-5" value="'+ipAddress.html()+'" />');
                            $('#edit-form-2').append('<input type="text" id="form-field-2" class="col-xs-10 col-sm-5" value="'+group.html()+'" />');
                            $('#routerEdit').attr("tableType", tableType);
                            $('#routerEdit').attr("orignalIpAddress", ipAddress.html());
                            $('#routerEdit').attr("orignalGroup", group.html());
                            $('#routerEdit').attr("routerId", routerId);
                            $("#routerEdit").modal();
                            event.stopPropagation();    //  阻止事件冒泡
                        });
                        newRow.find('.routerDelete').bind("click", function (event) {
                            var tableId = $(this).parent().parent().parent().parent().parent().attr('id');
                            var routerId = $(this).parent().parent().parent().attr('id');
                            var serviceId = tableId.substr(8);
                            var tableType = tableId.substr(6, 1);
                            var serviceNameId = '#serviceName-' + serviceId;
                            $('#routerDeleteTitle').html($(serviceNameId).html());
                            var group = $(this).parent().parent().prev();
                            var ipAddress = group.prev();
                            $('#delete-form-1').attr("value",ipAddress.html());
                            $('#delete-form-2').attr("value",group.html());
                            $('#routerDelete').attr("tableType", tableType);
                            $('#routerDelete').attr("orignalIpAddress", ipAddress.html());
                            $('#routerDelete').attr("orignalGroup", group.html());
                            $('#routerDelete').attr("routerId", routerId);
                            $('#routerDelete').modal();
                        });
                        dt.row.add(newRow).draw();
                    }else{
                        bootbox.dialog({
                            message: "<span class='bigger-110'>同一个节点上的同一个服务不能配置两个不同的路由分组</span>",
                            buttons:
                            {
                                "success" :
                                {
                                    "label" : "<i class='ace-icon fa fa-check'></i>Confirm",
                                    "className" : "btn-sm btn-success",
                                    "callback": function() {
                                        //Example.show("great success");
                                    }
                                }

                            }
                        });
                    }

                }
            });
        });


        $('.routerConfigCancel').bind("click",function(event){
            var tableId = $(this).parent().parent().parent().parent().parent().attr('id');
            var routerId = $(this).parent().parent().parent().attr('id');
            var serviceId = tableId.substr(8);
            var tableType = tableId.substr(6,1);
            var serviceNameId = '#serviceName-'+serviceId;
            $('#modalTitle').html($(serviceNameId).html());
            var group = $(this).parent().parent().prev();
            var ipAddress = group.prev();
            $('#edit-form-1').html("");
            $('#edit-form-2').html("");
            $('#edit-form-1').append('<input type="text" id="form-field-1" class="col-xs-10 col-sm-5" value="'+ipAddress.html()+'" />');
            $('#edit-form-2').append('<input type="text" id="form-field-2" class="col-xs-10 col-sm-5" value="'+group.html()+'" />');
            $('#routerEdit').attr("tableType",tableType);
            $('#routerEdit').attr("orignalIpAddress",ipAddress.html());
            $('#routerEdit').attr("orignalGroup",group.html());
            $('#routerEdit').attr("routerId",routerId);
            $("#routerEdit").modal();
            event.stopPropagation();    //  阻止事件冒泡
        });
        $('#modalConfirm').bind("click",function(event){
            var projectName = $('#projectName').html();
            var serviceName = $('#modalTitle').html();
            var routerId = '#'+$('#routerEdit').attr('routerId');
            var tableType = $('#routerEdit').attr('tableType');
            var ipAddress = $('#routerEdit').attr('orignalIpAddress');
            var group = $('#routerEdit').attr('orignalGroup');
            var orignalRouter = ipAddress+':'+group;
            var newIpAddress = $('#form-field-1').val();
            var newGroup = $('#form-field-2').val();
            var newRouter = newIpAddress+':'+newGroup;
            $.ajax({
                type: "post",
                url: "/shs/updateRouterConfig",
                data: {'projectName':projectName,'serviceName':serviceName,'tableType':tableType,'ipAddress':ipAddress,'group':group,'newIpAddress':newIpAddress,'newGroup':newGroup},
                dataType: "json",
                success: function (data) {
                    console.log(data);
                    if(JSON.stringify(data)=="true"){
                        var trDom = $(routerId);
                        var tableApi = trDom.parent().parent().DataTable();
                        var ipAddressDom = trDom.children().get(1);
                        var groupDom = $(ipAddressDom).next();
                        $(ipAddressDom).html(newIpAddress);
                        $(groupDom).html(newGroup);
                        tableApi.cell(ipAddressDom).invalidate();
                        tableApi.cell(groupDom).invalidate().draw();
                    }else{
                        bootbox.dialog({
                            message: "<span class='bigger-110'>同一个节点上的同一个服务不能配置两个不同的路由分组</span>",
                            buttons:
                            {
                                "success" :
                                {
                                    "label" : "<i class='ace-icon fa fa-check'></i>Confirm",
                                    "className" : "btn-sm btn-success",
                                    "callback": function() {
                                        //Example.show("great success");
                                    }
                                }

                            }
                        });
                    }
                }
            });
        });
        $('.routerDelete').bind("click",function(event){
            var tableId = $(this).parent().parent().parent().parent().parent().attr('id');
            var routerId = $(this).parent().parent().parent().attr('id');
            var serviceId = tableId.substr(8);
            var tableType = tableId.substr(6,1);
            var serviceNameId = '#serviceName-'+serviceId;
            $('#routerDeleteTitle').html($(serviceNameId).html());
            var group = $(this).parent().parent().prev();
            var ipAddress = group.prev();
            $('#delete-form-1').attr("value",ipAddress.html());
            $('#delete-form-2').attr("value",group.html());
            $('#routerDelete').attr("tableType",tableType);
            $('#routerDelete').attr("orignalIpAddress",ipAddress.html());
            $('#routerDelete').attr("orignalGroup",group.html());
            $('#routerDelete').attr("routerId",routerId);
            $('#routerDelete').modal();
        });
        $('#deleteModalConfirm').bind("click",function (event) {
            var projectName = $('#projectName').html();
            var serviceName = $('#routerDeleteTitle').html();
            var routerId = '#'+$('#routerDelete').attr('routerId');
            var tableType = $('#routerDelete').attr('tableType');
            var ipAddress = $('#routerDelete').attr('orignalIpAddress');
            var group = $('#routerDelete').attr('orignalGroup');
            $.ajax({
                type: "post",
                url: "/shs/deleteRouterConfig",
                data: {'projectName':projectName,'serviceName':serviceName,'tableType':tableType,'ipAddress':ipAddress,'group':group},
                dataType: "json",
                success: function (data) {
                    var trDom = $(routerId);
                    console.log(trDom);
                    trDom.parent().parent().DataTable().row(trDom).remove().draw();
                }
            });
        });
        $('#batchConfirm').bind("click",function(event){
            var projectName = $('#projectName').html();
            var serviceName = $('#batchTitle').html();
            var tableId = $('#batchOperation').attr("tableId");
            var tableType = tableId.substr(6,1);
            var trs = new Array();
            $('#'+tableId).find('tr > td:first-child input:checkbox').each(function () {
                var hasChk = $(this).is(':checked');
                if(hasChk){
                    trs.push($(this).parent().parent().parent().attr('id'));
                }
            });
            var objs = new Array();
            $.each(trs,function(n,value) {
                var tds = $('#'+value).find('td');
                console.log(tds);
                var config =  '{'+'"ipAddress":"'+$(tds.get(1)).html()+'","group":"'+$(tds.get(2)).html()+'"}';
                console.log(config);
                var obj = jQuery.parseJSON(config);
                console.log(obj);
                objs.push(obj);
            });
            var batchChange = JSON.stringify(objs);
            $.ajax({
                type:"post",
                url:"/shs/batchDelete",
                data:{'projectName':projectName,'serviceName':serviceName,'tableType':tableType,'batchChange':batchChange},
                success: function (data) {
                   $.each(trs,function (n,value) {
                       $('#'+tableId).DataTable().row($('#'+value)).remove();
                   });
                    $('#'+tableId).DataTable().draw();
                }
            });
        });
        $(document).on('click', 'th input:checkbox' , function(){
            var that = this;
            $(this).closest('table').find('tr > td:first-child input:checkbox')
                    .each(function(){
                        this.checked = that.checked;
                        $(this).closest('tr').toggleClass('selected');
                    });
        });
    });
</script>


