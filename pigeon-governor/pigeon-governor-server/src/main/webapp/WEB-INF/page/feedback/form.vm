#set($layout="layoutblank.vm")
<div class="modal fade" id="infoPage" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">

                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true" style="margin-top: -10px;">×</button>
                <h4 class="modal-title blue" id="myModalLabel">
                    编辑反馈信息
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <label class="col-sm-2 control-label blue" for="feedback-title">标题</label>
                    <div id="new-form-1" class="col-sm-9">
                        <input type="text" placeholder="" id="feedback-title" class="col-xs-12 col-sm-12" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 control-label blue">
                        内容
                    </label>

                    <!-- #section:plugins/editor.wysiwyg -->
                    <div class="col-sm-9">
                        <div id="editorContainer" >
                            <div id="editor" class="wysiwyg-editor">
                            </div>
                        </div>
                    </div>
                    <!-- /section:plugins/editor.wysiwyg -->
                </div>
            </div>
            <div class="modal-footer">
                <button id="feedback-submit" data-bb-handler="success" type="button" class="btn btn-sm btn-success" data-dismiss="modal"><i class="ace-icon fa fa-check"></i>Confirm</button>
            </div>
        </div>
    </div>
</div>




